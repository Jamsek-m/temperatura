{
  "compilerOptions": {
    "module": "es6",
    "target": "es5",
    "noImplicitAny": true,
    "jsx": "react",
    "moduleResolution": "node",
    "sourceMap": true,
    "typeRoots": [
      "src/types",
      "node_modules/@types"
    ],
    "allowJs": true,
    "outDir": "public",
    "lib": [
      "es2017",
      "dom"
    ]
  },
  "include": [
    "src/client/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/types"
  ]
}
